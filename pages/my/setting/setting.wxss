/* pages/my/setting/setting.wxss */
  .setting-container {
    margin: 20rpx 40rpx;
    border: 1px solid #FFAAD5;
    border-radius: 4px;
    padding: 0 30rpx 0;
  }

  .item-title{
    font-size: 35rpx;
    height: 90rpx;
    line-height: 70rpx;
    margin: 10rpx auto;
  }
  .item-desc{
    height: 20rpx;
    line-height: 20rpx;
    font-size: 25rpx;
    color: #6C6C6C;
  }

  .item-content {
    margin: 10rpx auto;
    background-color: #ffffff;
    color: #000;
  }

  .item-content-title{
    font-size: 35rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
  }
  
  .item-content-desc {
    color: #FFAAD5;
  }